      steps{
        echo 'building the application...'
      }
    }
    
     stage("test"){
      steps{
        echo 'testingthe application...'
      }
    }
    
     stage("deploy"){
      steps{
        echo 'deploying the application...'
      }
    }
    
    
  }
}
